<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_pomegranate</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red_pomegranate</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">@color/blue_dark</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="style_positive_button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/text_color_for_button_positive</item>
        <item name="android:background">@drawable/bg_button_positive</item>
    </style>

    <style name="style_share_button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_share</item>
    </style>

    <style name="ActionBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ActionBarButtonWhite" parent="@style/ActionBarButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarButtonOffWhite" parent="@style/ActionBarButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.WithPaddingLR" parent="@style/TextView">
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:paddingRight">@dimen/normal_margin</item>
    </style>

    <style name="TextView.WithMarginLR" parent="@style/TextView">
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
    </style>

    <style name="TextView.WithPaddingALL" parent="@style/TextView">
        <item name="android:padding">@dimen/normal_margin</item>
    </style>

    <style name="TextView.WithMarginALL" parent="@style/TextView">
        <item name="android:layout_margin">@dimen/normal_margin</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="SwitchTheme" parent="Animation.AppCompat.Dialog">
        <item name="android:colorControlActivated">@color/blue</item>
    </style>

</resources>
